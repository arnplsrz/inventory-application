<h2><%= game.title %></h2>
<ul class="game-details">
  <li><strong>Release Date:</strong> <%= game.release_date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></li>
  <li><strong>Genres:</strong> <%= game.genres.join(', ') %></li>
  <li><strong>Developers:</strong> <%= game.developers.join(', ') %></li>
  <li class="game-actions">
    <button onclick="location.href='/game/edit/<%= game.id %>'">Edit</button>
    <form action="/game/<%= game.id %>" method="post" style="display:inline;">
      <button type="submit">Delete</button>
    </form>
  </li>
</ul>